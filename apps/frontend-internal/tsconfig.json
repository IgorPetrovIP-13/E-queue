{
  "extends": "@repo/typescript-config/nextjs.json",
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
