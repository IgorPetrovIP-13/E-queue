{
	"name": "backend",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" ",
		"dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/main.ts",
		"start:dev": "ts-node-dev --respawn -r tsconfig-paths/register --transpile-only src/main.ts",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"lint-staged": "lint-staged",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prepare": "husky"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.0",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.0",
		"@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
		"@nestjs/mongoose": "^11.0.3",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.1.0",
		"@nestjs/platform-socket.io": "^11.1.0",
		"@nestjs/websockets": "^11.1.0",
		"@react-input/mask": "^2.0.4",
		"argon2": "^0.43.0",
		"axios": "^1.9.0",
		"cookie-parser": "^1.4.7",
		"dotenv": "^16.5.0",
		"express-jwt": "^8.5.1",
		"husky": "^9.1.7",
		"jwks-rsa": "^3.2.0",
		"lint-staged": "^15.5.1",
		"mongodb": "^6.16.0",
		"mongoose": "^8.14.1",
		"mongoose-autopopulate": "^1.1.0",
		"multer": "1.4.5-lts.2",
		"nestjs-telegraf": "^2.9.1",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2",
		"socket.io": "^4.8.1",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.7",
		"@nestjs/schematics": "^11.0.5",
		"@nestjs/testing": "^11.1.0",
		"@types/cookie-parser": "^1.4.8",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.3",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.31.1",
		"@typescript-eslint/parser": "^8.31.1",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-prettier": "^5.2.6",
		"jest": "^29.7.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.0",
		"ts-jest": "^29.3.2",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
